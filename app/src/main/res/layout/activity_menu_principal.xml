<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/fondo"
        android:gravity="center_horizontal">

        <TextView
            android:text="Menú Principal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <Button
            android:id="@+id/btnAgregarVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Vehículo"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnAgregarRepostaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Repostaje"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnVerVehiculos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Vehículos"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnVerRepostajes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Repostajes"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnEstadisticas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estadísticas"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión" />

        <Button
            android:id="@+id/btnEliminarCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar cuenta"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
