<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mycarcheckkotlin">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyCarCheckKotlin"
        tools:targetApi="31">

        <!-- Pantalla principal: Login -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegistroActivity"
            android:exported="true" />

        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <activity
            android:name=".AgregarVehiculoActivity"
            android:exported="true" />

        <activity
            android:name=".AgregarRepostajeActivity"
            android:exported="true" />

        <activity
            android:name=".MenuPrincipalActivity"
            android:exported="true" />

        <activity
            android:name=".ListaVehiculosActivity"
            android:exported="true" />

        <activity
            android:name=".ListaRepostajesActivity"
            android:exported="true" />

        <activity
            android:name=".EstadisticasActivity"
            android:exported="true" />

        <activity
            android:name=".HistorialRepostajesActivity"
            android:exported="true" />

        <activity
            android:name=".EditarVehiculoActivity"
            android:exported="true" />

    </application>

</manifest>
